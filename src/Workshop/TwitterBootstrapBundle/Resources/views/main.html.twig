{% extends "WorkshopTwitterBootstrapBundle::base.html.twig" %}

{% block title %}Some page title{% endblock %}

{% block javascripts %}
    {% javascripts filter='?yui_js'
        '@WorkshopTwitterBootstrapBundle/Resources/public/js/jquery-1.9.1.min.js'
        '@WorkshopTwitterBootstrapBundle/Resources/public/bootstrap/js/bootstrap.min.js'
        '@WorkshopTwitterBootstrapBundle/Resources/public/js/app.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='?yui_css'
        'bundles/workshoptwitterbootstrap/bootstrap/css/bootstrap.min.css'
        'bundles/workshoptwitterbootstrap/css/layout.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}


{% block body %}
    {% block header %}
        {% block navigation %}
            <header class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <button data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="/" class="brand">{% block projectName %}Some project name{% endblock %}</a>
                        {% block mainNavigation %}{% endblock %}
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}
    {% endblock %}

    <div class="container">
    {% block content %}
        <div class="hero-unit">
            <h1>Bootstrap starter template</h1>
            <p>
                Use this document as a way to quick start any new project.<br />
                All you get is this message and a barebones HTML document.
            </p>
        </div>
    {% endblock %}
    </div>

    {% block footer %}{% endblock %}
{% endblock %}